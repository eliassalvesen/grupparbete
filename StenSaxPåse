import random

options = ["sten", "sax", "påse"]
victory = [[1, 2], [2, 3], [3, 1]]


def checkResults(user, computer, cp_points, user_points):

    #checkResults tar användarens och datorns val som argument och skapar en lista för respektive värde
    #Sedan returneras ett värde för att ange vem som vann eller om det blev oavgjort.
    #(input list) Tar talet du gav och talet datorn gav och lägger dem i en lista som används i elif funktionen nedanför
    #(if) om användarens val är samma som datorns val så påverkas inte ställningen
    #(else) söker ifall inputlist finns i listan victory, ifall den finns så betyder det att användaren vann och 1 läggs till i user_points (user_points +=1)
    #(else) i alla andra fall förlorar användaren och datorns resultat ökar med 1 (cp_points +=1)
    #returnerar user_points och cp_points vilket är hela checkResults syfte
    #(options[computer-1]) tar värdet som datorn gav ut och söker i listan options efter det korrelerande funktionen (ex. "sten"). (-1) eftersom listan börjar från 0

    inputList = [user, computer]

    if user == computer:
        print("Datorn valde", (options[computer - 1]) + ", du valde", (options[user - 1]) + ". Oavgjort")

    elif inputList in victory:
        print("Datorn valde", (options[computer - 1]) + ", du valde", (options[user - 1]) + ". Du vann")
        user_points += 1

    else:
        print("Datorn valde", (options[computer - 1]) + ", du valde", (options[user - 1]) + ". Datorn vann")
        cp_points += 1

    return user_points, cp_points


def main():
    #   spelaren** = computer or human
    #   while(True) kör programmet.
    #   När den första spelaren** nått det inmatade poängantalet avslutas spelet med brake när if satsen uppfylls
    #   och visar resultatet till användaren.
    cp_points = 0
    user_points = 0
    print("*" * 17 + "\nSten - Sax - Påse" + "\n" + "*" * 17)
    score_limit = int(input("Hur många poäng behövs för att vinna?\n"))
    
    while (True):
        user = int(input("Gör ditt val:\n1:Sten\n2:Sax\n3:Påse\n"))
        computer = random.randint(1, 3)
        user_points, cp_points = checkResults(user, computer, cp_points, user_points)
        if (score_limit == cp_points or score_limit == user_points):
            break
    print()
    print("Slutställning")
    print("------------------")
    print("Datorn:", cp_points, "poäng")
    print("Användaren:", user_points, "poäng")
    print()


main()
