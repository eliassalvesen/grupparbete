def main():
    cp_points = 0
    user_points = 0
    score_limit = int(input("Hur många poäng behövs för att vinna?"))
    # **player/players = computer or human
    # while(True) runs the program until either players** gets the desired score.
    # When first player** reaches the desired score the program terminates,
    # and displays the end results to the user.
    while(True):
        user = int(input("Gör ditt val:\n1:Sten\n2:Sax\n3:Påse"))
        computer = random.randint(1, 3)
        cp_points, user_points = checkResults(user, computer, cp_points, user_points)
        if(score_limit == cp_points or score_limit == user_points):
            break
    print()
    print("Slutställning")
    print("------------------")
    print("Datorn:", user_points, "poäng")
    print("Användaren:", cp_points, "poäng")
    print()
main()
