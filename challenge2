import string


def crypt(message, key):

    # Takes value from user and changes the value by amount defined in (key)
    # (if) is for uppercase letters and (else) is for lowercase letters
    # everything else skips encryption process
    # process loops this for every character and adds them to encryptedMessage

    encryptedMessage = ""

    for character in message:
        if character in string.ascii_uppercase:
            old = ord(character)
            new = (old + key - 65) % 26 + 65
            newChar = chr(new)
            encryptedMessage += newChar

        elif character in string.ascii_lowercase:
            old = ord(character)
            new = (old + key - 97) % 26 + 97
            newChar = chr(new)
            encryptedMessage += newChar

        else:
            encryptedMessage += character
    print(encryptedMessage)


def Tester(message):

    # Function is identical to (def crypt) but loops the key with numbers 1-26
    # (Count) displays the key corresponding to the outputted word

    Count = 1
    print("For The key:")
    for numbers in range(1, 27):
        encryptedMessage = ""
        encryptedMessage += (str(Count) + ". ")
        Count += 1
        for character in message:
            if character in string.ascii_uppercase:
                old = ord(character)
                new = (old - numbers - 65) % 26 + 65
                newChar = chr(new)
                encryptedMessage += newChar

            elif character in string.ascii_lowercase:
                old = ord(character)
                new = (old - numbers - 97) % 26 + 97
                newChar = chr(new)
                encryptedMessage += newChar

            else:
                encryptedMessage += character

        print(encryptedMessage)


def main():

    x = int(input("Press \n1. Create encrypted word\n2. Decrypt word to plain text\n3. Test key for given word\n"))

    if x > 3:
        print("Please in put Value only between 1-3!")
        main()
    else:
        message = input("Input message:")
        if x == 1:
            key = int(input("Key:"))
            crypt(message, key)

        elif x == 2:
            key = int(input("Key:"))
            crypt(message, key * -1)

        elif x == 3:
            Tester(message)


main()
