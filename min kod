import random

options = ["sten", "sax", "påse"]
victory = [[1, 2], [2, 3], [3, 1]]


def checkResults(user, computer, cp_points, user_points):
    # checkResults(user,computer) som tar användarens och
    # datorns val som argument och returnerar ett värde för att
    # ange vem som vann eller om det blev oavgjort.
    inputList = [user, computer]

    if user == computer:
        print("Det blev oavgjort! Du valde", (options[user - 1]), "och datorn valde", (options[computer - 1]))

    elif inputList in victory:
        print("Du vann! Du valde:", (options[user - 1]), "och datorn valde", (options[computer - 1]))
        user_points += 1

    else:
        print("Du förlorade! Du valde:", (options[user-1]), "och datorn valde", (options[computer - 1]))
        cp_points += 1

    return user_points, cp_points


def main():
    cp_points = 0
    user_points = 0
    print("*" * 15 + "\nSten Sax Påse" + "\n" + "*" * 15)
    score_limit = int(input("Hur många poäng behövs för att vinna?\n"))

    # **player/players = computer or human
    # while(True) runs the program until either players** gets the desired score.
    # When first player** reaches the desired score the program terminates,
    # and displays the end results to the user.
    while (True):
        user = int(input("Gör ditt val:\n1:Sten\n2:Sax\n3:Påse\n"))
        computer = random.randint(1, 3)
        #checkResults(user, computer, cp_points, user_points)
        user_points, cp_points = checkResults(user, computer, cp_points, user_points)
        if (score_limit == cp_points or score_limit == user_points):
            break
    print()
    print("Slutställning")
    print("------------------")
    print("Datorn:", cp_points, "poäng")
    print("Användaren:", user_points, "poäng")
    print()


main()
